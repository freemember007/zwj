#modal-wrapper
	position absolute
	left 0
	right 0
	top 0
	bottom 0
	background none repeat scroll 0% 0% rgba(0, 0, 0, 0.3)
	z-index 10000
#detailContainer
	top 10%
	width 70%
	height 80%
	padding 15px
	margin-left 15%
	position fixed
	background #fff
	box-shadow 0px 2px 10px 2px rgba(0, 0, 0, 0.2)
	z-index 10001
	overflow auto
#detailContainerPage
	margin 20px auto 30px auto
	width 960px
	background #fff
	box-shadow 0px 2px 10px 2px rgba(0, 0, 0, 0.2)
	z-index 10001
	overflow auto
#close
	padding 12px
	height 16px
	right 160px	
	font-size 42px
	font-weight 200
	color #ccc
	position fixed
	z-index 2
.modal-body
	max-height: 450px
#detailTitle
	text-align center
	padding 0 15px
#detailContent
	margin 30px 30px
	display inline-block
	font-size 16px
	line-height 150%
#detailImage
	float left
	margin-left 20px
	display block
#detailPrice
	bottom 25%
	right 13%
	position fixed
	z-index 2
.buttonL
	color #fff
	font-size 18px
	background #D24036
	padding 10px
	margin-top 20px
	margin-right 20px
	display inline-block